<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link href="~/Content/bootstrap-5.0.2/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Content/bootstrap-5.0.2/js/bootstrap.bundle.js"></script>
</head>

@using QLCuaHangBanHoa.Models;

<body>
    @* Header ===================================================================================== *@
    <header>
            <nav class="navbar navbar-expand-lg navbar-light bg-white fixed-top shadow">
                <div class="container-fluid">
                    <button class="navbar-toggler"
                            type="button"
                            data-mdb-toggle="collapse"
                            data-mdb-target="#navbarExample01"
                            aria-controls="navbarExample01"
                            aria-expanded="false"
                            aria-label="Toggle navigation">
                        <i class="fas fa-bars"></i>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarExample01">
                        <div class="row">
                            @* Logo *@
                            <div class="col-md-2">
                                <a href="/Home/Home">
                                    <img src="~/Content/images/logoRemoveBackground.png" class="w-50" />
                                </a>
                            </div>
                            @* Login/Registration button *@
                            <div class="col-md-3 collapse navbar-collapse">
                                <a href="/Account/DangNhap" class="btn btn-outline-light me-1" style="color: #666666;">Đăng nhập</a>
                                <a href="/Account/DangKy" class="btn btn-outline-light" style="color: #666666;">Đăng ký</a>
                            </div>
                            @* User name *@
                        <div class="col-md-2 collapse navbar-collapse">
                            @{
                                if (Session["KhachHang"] != null)
                                {
                                    var k = Session["KhachHang"] as KHACHHANG;
                                    <span class="me-2" style="font-weight:bold">
                                        Chào bạn, @k.userName
                                    </span>
                                    <a href="/Account/DangXuat">
                                        <img src="~/Content/images/logout.png" width="20" height="20" />
                                    </a>
                                }
                            }
                        </div>
                            @* Menubar *@
                            <div class="col-md-4 collapse navbar-collapse">
                                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                    <li class="nav-item active">
                                        <a class="nav-link" aria-current="page" href="/Home/Home">Trang chủ</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/Product/Product">Sản phẩm</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/Product/Find">Tìm kiếm</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/Home/Introduce">Giới thiệu</a>
                                    </li>
                                </ul>
                            </div>
                            @* Cart *@
                            <div class="col-md-1 collapse navbar-collapse">
                                @Html.Action("GioHangPartial", "Cart")
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
        </header>

    @* Conent ===================================================================================== *@
    <div>
        @RenderBody()
    </div>

    @* Footer ===================================================================================== *@
    <footer class="text-center text-white" style="background-color: #f1f1f1;">
        <!-- Grid container -->
        <div class="container pt-4">
            <!-- Section: Text -->
            <section class="mb-4">
                <p style="color: #666666;">
                    Sunflower.sg - <i>"Gửi gắm yêu thương"</i>
                </p>
            </section>

            <!-- Section: Social media -->
            <section class="mb-4">
                <!-- Facebook -->
                <a class="btn btn-link btn-floating btn-lg text-dark m-1" role="button"
                   href="https://www.facebook.com/VN.Tidy" data-mdb-ripple-color="dark">
                    <i class="bi bi-facebook"></i>
                </a>

                <!-- Youtube -->
                <a class="btn btn-link btn-floating btn-lg text-dark m-1" role="button"
                   href="https://www.youtube.com/channel/UCo8wZCmnasuIyM3tnmFztLA"
                   data-mdb-ripple-color="dark">
                    <i class="bi bi-youtube"></i>
                </a>

                <!-- Instagram -->
                <a class="btn btn-link btn-floating btn-lg text-dark m-1" role="button"
                   href="https://www.instagram.com/7idyyy/" data-mdb-ripple-color="dark">
                    <i class="bi bi-instagram"></i>
                </a>

                <!-- Github -->
                <a class="btn btn-link btn-floating btn-lg text-dark m-1" role="button"
                   href="https://github.com/7idy" data-mdb-ripple-color="dark">
                    <i class="bi bi-github"></i>
                </a>
            </section>
        </div>
        <!-- Copyright -->
        <div class="text-center text-dark p-3" style="background-color: rgba(0, 0, 0, 0.2);">
            © 2022 Copyright:
            <a class="text-dark" href="#">Tidy</a>
        </div>
    </footer>
</body>
</html>